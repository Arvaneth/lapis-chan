<h1>Admin Panel</h1>

<hr />

<!-- Report Junk -->
<div class="admin_form">
	<form action="" method="post">
		<input name="csrf_token" type="hidden" value="<%= csrf_token %>" />

		<div>
			<label class="title">View Reported Post</label>
			<span class="fields">
				<select name="report">
					<% for _, report in ipairs(reports) do %>
					<option value="<%= report.id %>"><%= report.id %></option>
					<% end %>
				</select>
			</span>
		</div>

		<button name="view_report">View Report</button>
	</form>
</div>

<div class="admin_form">
	<form action="" method="post">
		<input name="csrf_token" type="hidden" value="<%= csrf_token %>" />

