				<select name="report">
					<% for _, report in ipairs(reports) do %>
					<option value="<%= report.id %>"><%= report.id %></option>
					<% end %>
				</select>
			</span>
		</div>

		<button name="delete_report">Delete Report</button>
	</form>
</div>

